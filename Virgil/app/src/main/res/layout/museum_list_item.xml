<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_museumListImage"
        android:src="@drawable/british_museum"
        android:layout_marginStart="1dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/museum_name"
        android:id="@+id/tv_museumName"
        android:layout_marginTop="@id/iv_museumListImage"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/dummy_address"
        android:id="@+id/tv_museumAddress"
        android:layout_marginLeft="110dp"
        android:layout_alignBottom="@+id/iv_museumListImage"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/dummy_hours"
        android:id="@+id/tv_museumListHours"
        android:layout_alignBottom="@+id/tv_museumName"
        android:layout_alignTop="@+id/tv_museumAddress"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@id/iv_museumListImage"
        android:layout_toEndOf="@+id/tv_museumAddress"
        android:layout_marginLeft="10dp"
         />

</RelativeLayout>
