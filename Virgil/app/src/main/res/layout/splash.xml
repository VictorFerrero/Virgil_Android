<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/splashscreen"
        android:layout_height="175dp"
        android:layout_width="wrap_content"
        android:maxWidth="1750dp"
        android:maxHeight="1750dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="@string/splash"
        android:src="@drawable/ic_virgil"
        android:layout_marginTop="77dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_app_title"
        android:text="@string/app_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="@dimen/title_size"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/splashscreen"
        android:layout_alignEnd="@+id/splashscreen"
        android:layout_marginEnd="130dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go To Museum List"
        android:id="@+id/splash_button"
        android:onClick="switchToList"
        android:layout_below="@+id/tv_app_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

</RelativeLayout>