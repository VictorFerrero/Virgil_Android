<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_exhibit_image"
        android:layout_width="165dp"
        android:layout_height="190dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        app:contentPadding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_museum_favorites"
                android:src="@drawable/museum_list_image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:background="@android:drawable/dialog_holo_light_frame"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/museum_name"
                android:id="@+id/tv_museum_favorites"
                android:layout_below="@+id/iv_museum_favorites"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
